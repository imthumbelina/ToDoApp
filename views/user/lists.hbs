<div class="container">
    <div class="row">
        {{# each todoListSchema as |tdls id|}}
            <div class="col-md-4">
                <div class=" todo-list-container">
                    <a href="/user/lists/todolist/delete/{{tdls._id}}">
                        <button class="btn btn-danger btn-xs">x</button>
                    </a>
                    <h5>
                        {{this.name}}
                    </h5>
                    <!--<a href="" class="plus-button">+</a>-->
                    <form action="/user/lists/newtodo" method="POST">
                        <div class="input-group">
                            <input type="text" class="new-todo-input" name="item"
                                   placeholder="Dodaj nowe zadanie">
                            <input type="hidden" id="hiddenId" name="label" value="{{this.name}}">
                        </div>
                    </form>
                        <ul class="todos-list">
                            {{# each todoList}}
                                <li>
                                    <span>
                                        {{this.name}}
                                    </span>
                                    <div class="action-container">
                                        <div class="task-checkbox">
                                            {{#if this.status }}
                                                <input type="checkbox" class="task-list-check" value="{{ this._id}}"
                                                       checked>
                                            {{else}}
                                                <input type="checkbox" class="task-list-check" value="{{ this._id}}">
                                            {{/if}}
                                        </div>

                                        <div class="pull-right hidden-phone">
                                            <a href="/user/lists/todo/delete/{{tdls._id}}/{{ this._id}}">
                                                <button class="btn btn-danger btn-xs">x</button>
                                            </a>
                                        </div>
                                    </div>

                                </li>
                            {{/each}}
                        </ul>
                    <ul></ul>
                </div>
            </div>
        {{/each}}
    </div>
</div>


